    <body>
        <div>
    
            <!-- Header including website logo and other images for design -->
            <%- include('layouts/header'); -%>

            <%- include('layouts/nav'); -%>
    
            <!-- Display all the available products -->
            <center><p class="headingText">ALL FAVOURITE BOOKS</p></center>
            <div class="mainContainer" id="mainProdContainer">
                <%
                    for (var book of favBooks) {
                %>
                <div class="booksContainer">
                    <center><img src="<%= book.image %>" id="bookImgs"></center>
                    <div id="nameDiv"><b>Title : <%= book.book_title %></b></div>
                    <div id="authDiv">Author : <%= book.author %></div>
                    <div id="genreDiv">Genre : <%= book.genre %></div>
                    <div id="editdelete">
                        <a href="/edit/<%= book._id %>"><img src="images/edit.png" class="edImg"></a>
                        <a href="/delete/<%= book._id %>"><img src="images/delete.png" class="edImg"></a>
                    </div>
                </div>
                <%
                    }
                %>
            </div>
    
            <!-- Footer having information related to website  -->
            <%- include('layouts/footer'); -%>
        </div>
